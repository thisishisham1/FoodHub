<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.about.AboutFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#FF5722"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>
        <TextView
            android:id="@+id/description_used_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Description :"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="@color/primary"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/about_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_marginTop="10dp"
            android:text="@string/description3"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/technologies_used_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›  Technologies Used:"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="@color/primary"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/technologies_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:text="@string/technology1"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/creators_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ–Š Creators:"
            android:textColor="@color/primary"
            android:layout_marginTop="10dp"
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/creators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:text="@string/creators"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>