<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.Auth.WelcomeFragment">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.05"
        />
    <ImageView
        android:id="@+id/imag_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/image_circle"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/small_image_in_welcome"/>
    <TextView
        android:id="@+id/tv_foodForEveryOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imag_circle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/food_for_neveryone"
        android:textColor="@color/white"
        android:lineSpacingExtra="-15dp"
        android:theme="@style/TextAppearance.Material3.HeadlineLarge"
      />
    <ImageView
        android:id="@+id/img_man"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        app:layout_constraintTop_toBottomOf="@id/tv_foodForEveryOne"
        app:layout_constraintBottom_toBottomOf="@id/btn_get_started"
        android:src="@drawable/large_image_in_welcome"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="25dp"
        android:text="Get started"
        android:textColor="@color/primary"
        android:textStyle="bold"
       android:theme="@style/TextAppearance.Material3.BodyLarge."
        />






</androidx.constraintlayout.widget.ConstraintLayout>