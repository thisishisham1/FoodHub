<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="iti.example.foodhub.presentation.main.home.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="iti.example.foodhub.presentation.main.search.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="iti.example.foodhub.presentation.main.about.AboutFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="iti.example.foodhub.presentation.main.fav.FavoriteFragment"
        android:label="Favorite" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="iti.example.foodhub.presentation.main.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>